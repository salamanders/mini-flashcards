{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "website",
    "ignore": [
      "firebase.json",
      "**/*.md",
      "**/*.yaml",
      "**/*.txt",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
